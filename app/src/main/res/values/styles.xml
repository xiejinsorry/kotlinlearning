<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MyPathView">
        <attr name="pathColor" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="padding" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="itemBg" format="reference"></attr>
        <attr name="itemMargin" format="dimension"></attr>
        <attr name="type" format="enum">
            <enum name="textView" value="1"></enum>
            <enum name="button" value="2"></enum>
        </attr>
    </declare-styleable>
</resources>
